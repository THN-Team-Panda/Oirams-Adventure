<Window x:Class="OA_Game.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OA_Game"
        mc:Ignorable="d"
        Title="Welcome!" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Height="480" Width="640">

        <Image Name="Backscreen" Stretch ="Fill"  VerticalAlignment="Center" HorizontalAlignment="Center" />

        <Button Name ="Level1" Content="Level 1"  HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Height="50" Width="400" Background="#FF00CBFA" Click="OpenLevel_Click" />
        <Button Name ="Level2" Content="Level 2"  HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Height="50" Width="400" Background="#FF00CBFA" Click ="OpenLevel_Click" IsEnabled="false" />
        <Button Name ="Level3" Content="Level 3"  HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Height="50" Width="400" Background="#FF00CBFA" Click="OpenLevel_Click" IsEnabled="false"/>


    </Grid>
</Window>
